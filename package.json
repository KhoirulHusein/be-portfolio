{
  "name": "be-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000 --turbopack",
    "build": "next build",
    "start": "next start -p 4000",
    "test": "vitest run",
    "test:unit": "vitest run --dir src/app/test/unit",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:prepare": "prisma migrate deploy",
    "test:reset": "prisma migrate reset --force --skip-generate --skip-seed",
    "prisma:gen": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "rbac:sync": "tsx scripts/sync-admin-perms.ts",
    "rbac:bootstrap": "tsx scripts/bootstrap-superadmin.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
