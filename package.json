{
  "name": "be-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "vercel-build": "prisma generate && next build",
    "build": "prisma generate && next build",

    "dev": "dotenv -e .env.development -- next dev -p 4000",
    "build:dev": "dotenv -e .env.development -- next build",
    "build:prod": "dotenv -e .env.production -- next build",
    "start:dev": "dotenv -e .env.development -- next start -p 4000",
    "start:prod": "dotenv -e .env.production -- next start -p 4000",
    
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "test:prepare": "dotenv -e .env.test -- prisma migrate deploy",
    "test:reset": "dotenv -e .env.test -- prisma migrate reset --force --skip-generate --skip-seed",
    
    "prisma:generate": "dotenv -e .env.development -- prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "prisma:reset:dev": "dotenv -e .env.development -- prisma migrate reset --force",
    "prisma:studio": "dotenv -e .env.development -- prisma studio",
    "prisma:seed:dev": "dotenv -e .env.development -- prisma db seed",
    
    "rbac:bootstrap:dev": "dotenv -e .env.development -- tsx scripts/bootstrap-superadmin.ts",
    "rbac:bootstrap:prod": "dotenv -e .env.production -- tsx scripts/bootstrap-superadmin.ts",

    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate deploy",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "prisma": "^6.15.0",
    "@prisma/client": "6.15.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
